<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.DetailPageFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"  >

      <ImageView
          android:id="@+id/DetailImage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:layout_marginBottom="5dp"
          app:srcCompat="@drawable/no_image"
          android:minHeight="200dp"
          android:scaleType="center"
          android:layout_alignParentTop="true"/>

      <TextView
          android:id="@+id/DetailGenusText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/DetailImage"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:text="deneme"
          android:textColor="@color/black"
          android:textSize="25dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/DetailDefinitionText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/DetailGenusText"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:text="deneme"
          android:textSize="15dp"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/DetailUrlText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/DetailDefinitionText"
          android:text="deneme"
          android:textSize="15dp"
          android:textStyle="bold"/>


  </RelativeLayout>
</layout>

